@using Group21ProjectMVC.Models.FlightViewModels
@model FlightSearchViewModel
@{
    ViewData["Title"] = "Home page";
}

<link href="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@master/dist/css/tempus-dominus.css"
      rel="stylesheet" crossorigin="anonymous">

<div class="col-md-8 py-5 px-3 mx-auto">
    <div class="card">
        <div class="card-header">
            <div class="nav nav-tabs card-header-tabs" data-bs-tabs="tabs">
                <a class="nav-link active" aria-current="true" data-bs-toggle="tab" href="#findflights">Find Flights</a>
                <a class="nav-link" aria-current="true" data-bs-toggle="tab" href="#mytrips">My Trips</a>
                <a class="nav-link" aria-current="true" data-bs-toggle="tab" href="#checkin">Check-In</a>
                <a class="nav-link" data-bs-toggle="tab" href="#flightstatus">Flight Status</a>
            </div>
        </div>
        <div class="card-body tab-content">
            <div class="tab-pane active" id="findflights">
                <div class="row ps-3">
                    <div class="nav nav-pills">
                        <a class="nav-link active" asp-for="TripType" value=0 data-bs-toggle="tab" href="#roundtrip">Round Trip</a>
                        <a class="nav-link" asp-for="TripType" value=1 data-bs-toggle="tab" href="#oneway">One Way</a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="roundtrip">
                            <form autocomplete="off">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <div class="row">
                                        <div class="col-md autocomplete form-group">
                                            <label asp-for="FromLocation">From</label>
                                            <input asp-for="FromLocation" type="text" class="form-control typeahead tt-query" aria-describedby="From"
                                                   placeholder="City or Airport" name="FromLocation" id="FromLBL">
                                            <span asp-validation-for="FromLocation" class="text-danger"></span>
                                        </div>
                                        <div class="col-md autocomplete form-group">
                                            <label asp-for="ToLocation">To</label>
                                            <input asp-for="ToLocation" type="text" class="form-control typeahead tt-query" aria-describedby="To"
                                                   placeholder="City or Airport" name="ToLocation" id="ToLBL">
                                            <span asp-validation-for="ToLocation" class="text-danger"></span>
                                        </div>
                                        <div class="col-md">
                                            <div class="form-group">
                                                <label asp-for="SeatsRequired">Adults (12+)</label>
                                                <select asp-for="SeatsRequired" class="form-select" name="SeatsRequired">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                    <option>6</option>
                                                    <option>7</option>
                                                    <option>8</option>
                                                    <option>9</option>
                                                </select>
                                                <span asp-validation-for="SeatsRequired" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-md form-group">
                                            <label asp-for="DepartureDate">Depart</label>
                                            <div class='input-group' id='datetimepicker1' data-td-target-input='nearest'
                                                 data-td-target-toggle='nearest'>
                                                <input asp-for="DepartureDate" id='datetimepicker1Input' type='text' class='form-control'
                                                       data-td-target='#datetimepicker1' name="DepartureDate" />
                                                <span class='input-group-text' data-td-target='#datetimepicker1'
                                                      data-td-toggle='datetimepicker'>
                                                    <span class='fas fa-calendar'></span>
                                                </span>
                                                <span asp-validation-for="DepartureDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md form-group">
                                            <label asp-for="ReturnDate">Return</label>
                                            <div class='input-group' id='datetimepicker2' data-td-target-input='nearest'
                                                 data-td-target-toggle='nearest'>
                                                <input asp-for="ReturnDate" id='datetimepicker2Input' type='text' class='form-control'
                                                       data-td-target='#datetimepicker2' name="ReturnDate" />
                                                <span class='input-group-text' data-td-target='#datetimepicker2'
                                                      data-td-toggle='datetimepicker'>
                                                    <span class='fas fa-calendar'></span>
                                                </span>

                                            </div>
                                            <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                            <input asp-for="TabName" value="roundtrip" type="hidden" />
                                        </div>
                                        <div class="col-md pt-4">
                                            <button class="btn btn-primary w-100" type="submit" asp-controller="Search" asp-action="Flight">Search</button>
                                        </div>
                                    </div>
                                </div>
                                <script>

                                </script>
                            </form>
                        </div>
                        <div class="tab-pane" id="oneway">
                            <form autocomplete="off">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <div class="row">
                                        <div class="col-md autocomplete form-group">
                                            <label asp-for="FromLocation">From</label>
                                            <input asp-for="FromLocation" type="text" class="form-control typeahead tt-query" aria-describedby="From"
                                                   placeholder="City or Airport" name="FromLocation" id="FromLBL1W">
                                            <span asp-validation-for="FromLocation" class="text-danger"></span>
                                        </div>
                                        <div class="col-md autocomplete form-group">
                                            <label asp-for="ToLocation">To</label>
                                            <input asp-for="ToLocation" type="text" class="form-control typeahead tt-query" aria-describedby="To"
                                                   placeholder="City or Airport" name="ToLocation" id="ToLBL1W">
                                            <span asp-validation-for="ToLocation" class="text-danger"></span>
                                        </div>
                                        <div class="col-md">
                                            <div class="form-group">
                                                <label asp-for="SeatsRequired">Adults (12+)</label>
                                                <select asp-for="SeatsRequired" class="form-select" name="SeatsRequired">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                    <option>6</option>
                                                    <option>7</option>
                                                    <option>8</option>
                                                    <option>9</option>
                                                </select>
                                                <span asp-validation-for="SeatsRequired" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row pt-2">
                                        <div class="col-md form-group">
                                            <label asp-for="DepartureDate">Depart</label>
                                            <div class='input-group' id='datetimepicker3' data-td-target-input='nearest'
                                                 data-td-target-toggle='nearest'>
                                                <input asp-for="DepartureDate" id='datetimepicker3Input' type='text' class='form-control'
                                                       data-td-target='#datetimepicker3' name="DepartureDate" />
                                                <span class='input-group-text' data-td-target='#datetimepicker3'
                                                      data-td-toggle='datetimepicker'>
                                                    <span class='fas fa-calendar'></span>
                                                </span>
                                                <span asp-validation-for="DepartureDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <input asp-for="TabName" value="oneway" type="hidden" />
                                        </div>
                                        <div class="col-md pt-4">
                                            <button class="btn btn-primary w-100" type="submit" asp-controller="Search" asp-action="Flight">Search</button>
                                        </div>
                                    </div>
                                </div>
                                <script>

                                </script>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane" id="mytrips">
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md">
                            <label for="FnLBL">Passenger First Name</label>
                            <input type="text" class="form-control" id="FnLBL" aria-describedby="First Name" required>
                        </div>
                        <div class="col-md">
                            <label for="LnLBL">Passenger Last Name</label>
                            <input type="text" class="form-control" id="LnLBL" aria-describedby="Last Name" required>
                        </div>
                        <div class="col-md">
                            <label for="RefIDLBL">Booking Reference</label>
                            <input type="text" class="form-control" id="RefIDLBL" aria-describedby="Booking Reference ID" required>
                        </div>
                    </div>
                    <div class="row pt-4">
                        <button class="btn btn-primary" type="submit">Find Your Trip</button>
                    </div>
                </form>
            </div>
            <div class="tab-pane" id="checkin">
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md">
                            <label for="FnLBL">Passenger First Name</label>
                            <input type="text" class="form-control" id="FnLBL" aria-describedby="First Name" required>
                        </div>
                        <div class="col-md">
                            <label for="LnLBL">Passenger Last Name</label>
                            <input type="text" class="form-control" id="LnLBL" aria-describedby="Last Name" required>
                        </div>
                        <div class="col-md">
                            <label for="RefIDLBL">Booking Reference</label>
                            <input type="text" class="form-control" id="RefIDLBL" aria-describedby="Booking Reference ID" required>
                        </div>
                    </div>
                    <div class="row pt-4">
                        <button class="btn btn-primary" type="submit">Check-In</button>
                    </div>
                </form>
            </div>
            <div class="tab-pane" id="flightstatus">
                <form class="needs-validation" novalidate autocomplete="off">
                    <div class="row">
                        <div class="col-md autocomplete">
                            <label for="FromLBLFS">From</label>
                            <input type="text" class="form-control" id="FromLBLFS" aria-describedby="From"
                                   placeholder="City or Airport" required>
                        </div>
                        <div class="col-md autocomplete">
                            <label for="ToLBLFS">To</label>
                            <input type="text" class="form-control" id="ToLBLFS" aria-describedby="To"
                                   placeholder="City or Airport" required>
                        </div>
                        <div class="col-md">
                            <label for="datetimepicker4Input">Date</label>
                            <div class='input-group' id='datetimepicker4' data-td-target-input='nearest'
                                 data-td-target-toggle='nearest'>
                                <input id='datetimepicker4Input' type='text' class='form-control' data-td-target='#datetimepicker4'
                                       required />
                                <span class='input-group-text' data-td-target='#datetimepicker4' data-td-toggle='datetimepicker'>
                                    <span class='fas fa-calendar'></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-4">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/&#64;popperjs/core&#64;2.11.2/dist/umd/popper.min.js"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/gh/Eonasdan/tempus-dominus@master/dist/js/tempus-dominus.js"
        crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
                $.validator.addMethod(
        'unlike',
        function (value, element, params) {
            console.debug(element);
            if (!this.optional(element)) {
                var otherProperty = $('#' + params.otherproperty)
                return (otherProperty.val() != value);
            }
            return true;
        });

    $.validator.unobtrusive.adapters.add(
        'unlike', ['otherproperty', 'otherpropertyname'], function (options) {
            var params = {
                otherproperty: options.params.otherproperty,
                otherpropertyname: options.params.otherpropertyname
            };
            options.rules['unlike'] = params;
            options.messages['unlike'] = options.message;
        });
</script>
<script type="text/javascript">
    $(function () {
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
    var target = $(e.target).attr("href")
    document.getElementById('<%= hf_MyValue.ClientID %>').value = target;
    });
    })
</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
