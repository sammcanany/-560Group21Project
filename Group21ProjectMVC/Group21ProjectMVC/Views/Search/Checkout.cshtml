@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using System.Globalization
@model Group21ProjectMVC.Models.FlightViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
    decimal subtotal = 0.00m;
    decimal total = 0.00m;
    decimal tax = 0.00m;
    string[] colLetters = { "A", "B", "C", "D", "E", "F" };
    bool setActive = true;
    string tabPane = "<div class=\"tab-pane active\" id=\"Departure\">";
    string tabPane2 = "<div class=\"tab-pane\" id=\"Return\">";
}

<h1 class="text-center mb-3">Checkout</h1>

<div id="review">
    <div class="row">
        <h4 class="end-0">Review Flights</h4>
        <hr />
    </div>

    <div class="row mb-5">
        <ul>
            @foreach (ApplicationFlight flight in Model.Flights)
            {

                TimeSpan diff = flight.ArrivalTime - flight.DepartureTime;
                string formatted = string.Format(CultureInfo.CurrentCulture, "{0}h {1}m", diff.Hours, diff.Minutes);
                <li id="@flight.FlightNumber" class="pt-4">
                    <div class="row border-bottom pb-4 ps-4 pe-4">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <p class="medium-text mb-0">@flight.DepartingAirportCode</p>
                                    <p class="large-text">@flight.DepartureTime.ToString("hh:mm tt")</p>
                                </div>
                                <div class="col">
                                    <i class="fas fa-arrow-right fa-xl"></i>
                                </div>
                                <div class="col">
                                    <p class="medium-text mb-0">@flight.DestinationAirportCode</p>
                                    <p class="large-text">@flight.ArrivalTime.ToString("hh:mm tt")</p>
                                </div>
                                <div class="col">
                                    <p class="medium-text">@formatted</p>
                                </div>
                                <div class="col">
                                    <p class="medium-text text-center">Nonstop</p>
                                </div>
                            </div>
                            <div class="row">
                                <p class="small-text">@flight.FlightNumber</p>
                            </div>

                        </div>
                        <div class="col-lg">
                            <button class="w-100 h-100 btn btn-light rounded border border-dark d-block">
                                <p class="medium-text">Round Trip</p>
                                <p class="large-text text-primary">@String.Format("{0:C0}",flight.Price * Model.SeatsRequired)</p>
                            </button>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12 position-relative">
            <button type="button" class="btn btn-primary position-absolute bottom-0 end-0" onclick="ChangePage('passengerdetails')">Continue</button>
        </div>
    </div>
</div>
<div id="passengerdetails" style="display: none;">
    <div class="row">
        <h4 class="end-0">Passenger Details</h4>
        <hr />
    </div>
    <div class="row mb-5" id="needs-validation-details">
        <h5>Passenger 1</h5>
        <div class="col-12 mb-3">
            <div class="row">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <div class="form-floating">
                        <input asp-for="FirstNames" type="text" class="input form-control" placeholder="First" value="@UserManager.GetUserAsync(User).Result.FirstName" required="" form="checkout-form" />
                        <label asp-for="FirstNames">First</label>
                        <div class="invalid-feedback"> Please enter your city. </div>
                    </div>
                    <div class="form-floating">
                        <input asp-for="LastNames" type="text" class="input form-control" placeholder="Last" value="@UserManager.GetUserAsync(User).Result.LastName" required="" form="checkout-form" />
                        <label asp-for="LastNames">Last</label>
                        <div class="invalid-feedback"> Please enter your city. </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col ms-2">
                    <span asp-validation-for="FirstNames" class="text-danger"></span>
                </div>
                <div class="col">
                    <span asp-validation-for="LastNames" class="text-danger"></span>
                </div>
            </div>
        </div>
        @if (Model.SeatsRequired > 1)
        {
            for (int i = 0; i < Model.SeatsRequired - 1; i++)
            {
                <h5>Passenger @(i+2)</h5>
                <div class="col-12 mb-3">
                    <div class="row">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <div class="form-floating">
                                <input asp-for="FirstNames" type="text" class="input form-control" placeholder="First" required="" form="checkout-form" />
                                <label asp-for="FirstNames">First</label>
                                <div class="invalid-feedback-details"> Please enter your city. </div>
                            </div>
                            <div class="form-floating">
                                <input asp-for="LastNames" type="text" class="input form-control" placeholder="Last" required="" form="checkout-form" />
                                <label asp-for="LastNames">Last</label>
                                <div class="invalid-feedback-details"> Please enter your city. </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col ms-2">
                            <span asp-validation-for="FirstNames" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <span asp-validation-for="LastNames" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="row">
        <div class="col-md-12 position-relative">
            <button type="button" class="btn btn-primary position-absolute bottom-0 end-0" onclick="ChangePage('seat-selection')">Continue</button>
            <button type="button" class="btn btn-primary position-absolute bottom-0 start-0" onclick="ChangePage('review')">Previous</button>
        </div>
    </div>
</div>
<div id="seat-selection">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 order-md-2 mb-4">
            </div>
            <div class="col-md-4 order-md-1">
                <div class="nav nav-pills">
                    @if (Model.ReturnFlightID != 0)
                    {
                        <a class="nav-link active" asp-for="TripType" value=0 data-bs-toggle="tab" href="#Departure">Departure Flight</a>
                        <a class="nav-link" asp-for="TripType" value=1 data-bs-toggle="tab" href="#Return">Return Flight</a>
                    }
                    else
                    {
                        <a class="nav-link active" asp-for="TripType" value=0 data-bs-toggle="tab" href="#Departure">Departure Flight</a>
                    }
                </div>
                <div class="tab-content">
                    @foreach (var flight in Model.Flights)
                    {
                        if (setActive)
                        {
                            @Html.Raw(tabPane)
                        }
                        else
                        {
                            @Html.Raw(tabPane2)
                        }
                        <div class="btn-group btn-matrix" role="group" aria-label="Three Column Button Matrix">
                            @for (int i = 0; i < flight.Capacity / 6; i++)
                            {
                                for (int j = 0; j < 6; j++)
                                {
                                    if (flight.SeatsNotAvailable.Contains(((i + 1) * 6) - (6 - (j + 1))))
                                    {
                                        <button type="button" class="btn btn-outline-primary taken" disabled></button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-dark">@(((i+1)*6)-(6-(j+1)))</button>
                                    }
                                    if (j == 2)
                                    {
                                        <button type="button" class="btn btn-none" disabled>@(i+1)</button>
                                    }
                                }
                            }
                        </div>
                        @Html.Raw("</div>")
                        setActive = false;
                    }
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <button type="button" class="btn btn-primary position-absolute bottom-0 end-0" onclick="ChangePage('billing')">Continue</button>
                <button type="button" class="btn btn-primary position-relative bottom-0 start-0" onclick="ChangePage('passengerdetails')">Previous</button>
            </div>
        </div>
    </div>
</div>
<div id="billing" style="display: none;">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Your cart</span>
                    <span class="badge badge-secondary badge-pill">@Model.Flights.Count()</span>
                </h4>
                <ul class="list-group mb-3 sticky-top">
                    @foreach (var flight in Model.Flights)
                    {
                        subtotal += flight.Price * Model.SeatsRequired;
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Trip @flight.DepartingAirportCode / @flight.DestinationAirportCode</h6>
                                <small class="text-muted">Passengers (@Model.SeatsRequired)</small>
                            </div>
                            <span class="text-muted">$ @((flight.Price * Model.SeatsRequired).ToString("0.00"))</span>
                        </li>
                    }
                    @{
                        tax = subtotal * 0.065m;
                    }
                    @{
                        total = subtotal + tax;
                    }
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Taxes</h6>
                        </div>
                        <span class="text-muted">$@tax.ToString("0.00")</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$@total.ToString("0.00")</strong>
                    </li>
                </ul>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Billing address</h4>
                <form class="needs-validation" novalidate="" id="checkout-form" method="post">
                    <div class="mb-3">
                        <label asp-for="BillingAddress">Address</label>
