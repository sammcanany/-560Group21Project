            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <button type="button" class="btn btn-primary position-relative bottom-0 start-0" onclick="ChangePage('seat-selection')">Previous</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
<script type="text/javascript">
function ChangePage(name) {
    var review = document.getElementById('review');
    var passengerdetails = document.getElementById('passengerdetails');
    var seat - selection = document.getElementById('seat-selection');
    var billing = document.getElementById('billing');
    if (name === 'review') {
        billing.style.display = "none";
        passengerdetails.style.display = "none";
        seat - selection.style.display = "none";
        review.style.display = "block";
    } else if (name === 'passengerdetails') {
        review.style.display = "none";
        billing.style.display = "none";
        seat - selection.style.display = "none";
        passengerdetails.style.display = "block";
    } else if (name === 'seat-selection') {
        var details = document.getElementById('needs-validation-details');
        var inputs = details.getElementsByTagName('input');
        var check = true;
        for (i = 0; i < inputs.length; i++) {
            if (inputs[i].value.trim() == "") {
                check = false;
                inputs[i].classList.add("invalid");
                inputs[i].parentNode.childNodes.forEach(function(node) {
                    if (node.className == 'invalid-feedback-details') {
                        node.classList.add("visible");
                    }
                });
            } else {
                inputs[i].classList.remove("invalid");
            }
            inputs[i].classList.add('was-validated')
        }
        if (check) {
            review.style.display = "none";
            billing.style.display = "none";
            passengerdetails.style.display = "none";
            seat - selection.style.display = "block";
        }
    } else if (name === 'billing') {
        passengerdetails.style.display = "none";
        review.style.display = "none";
        seat - selection.style.display = "none";
        billing.style.display = "block";
    }
}
</script>
<script type="text/javascript">
        (function () {
      'use strict'

      window.addEventListener('load', function () {
        var forms = document.getElementsByClassName('needs-validation')
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
      }, false)
    }())
</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
