                            <div class="invalid-feedback"> Please enter your city. </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="BillingState">State</label>
                            <select asp-for="BillingState" class="form-select d-block w-100" id="state" required="">
