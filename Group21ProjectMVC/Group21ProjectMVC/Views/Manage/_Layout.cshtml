@inject UserManager<ApplicationUser> UserManager
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var user = UserManager.GetUserAsync(User).Result;
}

<div class="row align-items-center mb-4">
    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
        <div class="pt-4 rounded-top-md bg-primary" style="background-size: cover;"></div>
        <div class="d-flex align-items-end justify-content-between bg-white px-4 pt-2 pb-4 rounded-none rounded-bottom-md shadow-sm">
            <div class="d-flex align-items-center">
                <div class="lh-1">
                    <h2 class="mb-0">
                        @(user.FirstName + " " + user.LastName)
                    </h2>
                    <p class="mb-0 d-block">@@@user.UserName</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-12">
            @await Html.PartialAsync("_ManageNav")
        </div>
        <div class="col-lg-9 col-md-8 col-12">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}